<div id="header">
	<h4>Your Gold: <%= @total %></h4> 
</div>
<div id="farm" class="box">
	<h2>Farm</h2>
	<h4>(earns 10-20 gold)</h4>
	<form action="rpg/farm" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="submit" name="commit" value="Find Gold!">
	</form>
</div>
<div id="cave" class="box">
	<h2>Cave</h2>
	<h4>(earns 5-10 gold)</h4>
	<form action="rpg/cave" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="submit" name="commit" value="Find Gold!">
	</form>
</div>
<div id="house" class="box">
	<h2>House</h2>
	<h4>(earns 2-5 gold)</h4>
	<form action="rpg/house" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="submit" name="commit" value="Find Gold!">
	</form>
</div>
<div id="casino" class="box">
	<h2>Casino</h2>
	<h4>(earns/takes 0-50 gold)</h4>
	<form action="rpg/casino" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="submit" name="commit" value="Find Gold!">
	</form>
</div>
<div>
	<h3>Activities:</h3>
	<div id="activity">
		<% for i in session[:activity] %>
		<h6> <%= i %></h6>
		<% end %>
	</div>
</div>

<style type="text/css">
	.box{
		width: 200px;
		height: 150px;
		border: solid black 1px;
		padding: 20px;
		display: inline-block;
		margin-top: 10px;
		text-align: center;
	}
	#casino{
		background-color: lightblue;
	}
	#farm{
		background-color: lightgreen;
	}
	#cave{
		background-color: yellow;
	}
	#house{
		background-color: orange;
	}
	#activity{
		border: solid black 1px;
		width: 90%;
		height: 300px;
		padding-left: 20px;
		padding-bottom: 10px;
		overflow-y: scroll;
	}
</style>