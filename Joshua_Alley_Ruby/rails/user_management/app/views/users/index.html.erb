<h1>Listing Users</h1>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>email</th>
	</tr>
	<% for user in @users %>
	<tr>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.email %></td>
		<td><a href="/users/show/<%= user.id %>">Show</a></td>
		<td><a href="/users/<%= user.id %>/edit/">Edit</a></td>
		<td><a href="/users/destroy/<%= user.id %>/" data-method='delete'>Destroy</a></td>
	</tr>
	<% end %>
</table>
<a href="users/new">New User</a>

