<div style="text-align:center">
    <h2>Welcome to the Great Number Game!</h2>
    <h4>I am thinking of a number between 1 and 100</h4>
    <h4>Take a guess</h4>
    <% if flash[:high] %>
        <div style="display: inline-block; height:7rem; width:7rem; background-color:red; color:white">
            <p style="margin-top: 2.7rem"><%= flash[:high] %></p>
        </div><br>
    <% end %>
    <% if flash[:low] %>
        <div style="display: inline-block; height:7rem; width:7rem; background-color:red; color:white">
            <p style="margin-top: 2.7rem"><%= flash[:low] %></p>
        </div><br>
    <% end %>
    <% if flash[:success] %>
        <div style="display: inline-block; height:7rem; width:7rem; background-color:green; color:white">
            <p style="margin-top: 2.7rem"><%= flash[:success] %></p>
            <a href="/reset"><button type="button" name="button">Play Again</button></a>
        </div><br>
    <% end %>
    <form action="/guess">
        <input type="number" name="user[guess]" autofocus><br>
        <input type="submit">
    </form>
</div>
