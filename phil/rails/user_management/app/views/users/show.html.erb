<h2>User <%= @user.id %></h2>
<% if flash.notice %>
    <p><%= flash.notice %></p>
<% end %>
<table>
    <tr>
        <th>First Name:</th>
        <td><%= @user.first_name %></td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td><%= @user.last_name %></td>
    </tr>
    <tr>
        <th>Email Address:</th>
        <td><%= @user.email %></td>
    </tr>
</table>
<p><a href="/users/<%= @user.id %>/edit">Edit</a> | <a href="/users">Back</a></p>
